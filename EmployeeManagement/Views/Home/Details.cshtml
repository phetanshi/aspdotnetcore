@model HomeDetailsEmployeeViewModel
@{
    ViewBag.Title = "Employee Details";

    var photoPath = Model.PhotoPath != null ? "~/" + Model.PhotoPath : "~/images/car.jpg";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        @if (!Extensions.IsNullOrWhiteSpace(Model.Message))
        {
        <div class="alert alert-success">@Model.Message</div>
        }
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>
                <h4>Department : @Model.Department.ToString()</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-action="index" asp-controller="home" class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="delete" asp-controller="home" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>