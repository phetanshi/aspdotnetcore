@model HomeEditEmployeeViewModel
@{
    ViewBag.Title = "Employee Details";
    var photoPath = Model.PhotoPath != null ? "~/" + Model.PhotoPath : "~/images/car.jpg";
}

<div class="row text-capitalize text-center"><h3>Edit Employee</h3></div>

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <partial name="_EmployeeFields" model="Model" />
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>
    <div class="form-group row mb-1">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>